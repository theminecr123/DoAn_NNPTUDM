<head>
    <style>
        /* Styles for the order history page */
        h2 {
            text-align: center;
            margin-bottom: 20px;
        }
        ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
            max-width: 600px;
            margin: 0 auto;
        }
        li {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 10px;
            background-color: #f9f9f9;
        }
        li span {
            display: block;
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <h2>Your Order History</h2>
    {{#if orders.length}}
        <ul>
            {{#each orders}}
                <li>
                    <span>Total: ${{this.total}}</span>
                    <span>Date: {{formatDate this.dateCreated "HH:mm DD/MM/YYYY"}}</span>
                    <button onclick="window.location.href='/order/details/{{this._id}}'">View Order Details</button>

                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No orders found.</p>
    {{/if}}
</body>
