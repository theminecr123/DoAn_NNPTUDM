<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Order Details</title>
    <!-- Include CSS and jQuery -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1>Order Details</h1>
    <table id="order-table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {{#each cart}}
            <tr>
                <td>{{name}}</td>
                <td>${{price}}</td>
                <td>{{quantity}}</td>
                <td>${{totalPrice}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p>Total Price: ${{totalPrice}}</p>
    <button id="confirm-button">Confirm Order</button>

    <script>
        $(document).ready(function() {
            // Handle confirm button click
            $('#confirm-button').on('click', function() {
                $.ajax({
                    url: '/order/confirm',
                    method: 'POST',
                    success: function(response) {
                        if (response.success) {
                            // Redirect to order_success page with order ID as a query parameter
                            window.location.href = '/order/success';
                        } else {
                            console.error('Error confirming order:', response.message);
                        }
                    },
                    error: function(error) {
                        console.error('Error confirming order:', error);
                        // Display a generic error message
                        alert('An error occurred while confirming the order. Please try again later.');
                    }
                });

                // AJAX request to confirm the order
                
            });
        });
           
    </script>
</body>

</html>
